    {% assign avada_popup_scripttag = url %}
  {% endif %}
{% endfor %}
{% if avada_email_marketing_scripttag != "" and avadaEMStatus == false %}
  {% assign content_for_header = content_for_header | remove: avada_email_marketing_scripttag %}
